extends base
block content
    main.container.center
        div(class="search-page_hero")
            h1(class="search__title")
                | Let’s Find your
                br
                | perfect Engineer!
            p(class="search__sub-title") Refine your search by selecting tags and
                br
                | options to find the best result
        div(class="search-questions__container")
            article#engineeringCategoryQuestion.search-question
                h2(class="question_title") Which engineering category
                    br
                    | are you seeking?
                div(class="question__tags engineer-category__tags")
                    button(class="question__tag") Software Engineering
                    button(class="question__tag") Computer Engineering
                    button(class="question__tag") Environmetal Engineering
                    button(class="question__tag") Materials Engineering
                    button(class="question__tag") Chemical Engineering
                    button(class="question__tag") Electrical Engineering
                    button(class="question__tag") Mechanical Engineering
                    button(class="question__tag") Civil Engineering
                    button(class="question__tag") Petroleum Engineering
            article#skillsQuestion.search-question
                h2(class="question_title") What other Skills you&apos;re Looking
                    br
                    | for in Engineers ?
                div(class="question__tags")
                    button(class="question__tag") Project Management
                    button(class="question__tag") Adaptability
                    button(class="question__tag") Customer Focus
                    button(class="question__tag") Decision-Making
                    button(class="question__tag") Continuous Learning
                    button(class="question__tag") Leadership
                    button(class="question__tag") Creativity
                    button(class="question__tag") Presentation Skills
                    button(class="question__tag") Safety Awareness
                    button(class="question__tag") other
            article#educationLevelQuestion.search-question
                h2(class="question_title")| Preferred Education Level
                    br
                    | for Engineers
                    span.optinal (optional)
                div(class="question__tags")
                    button(class="question__tag") Bachelor&apos;s Degree
                    button(class="question__tag") Master&apos;s Degree
                    button(class="question__tag") Doctor Degree
                    button(class="question__tag") Industry-Specific Training
                    button(class="question__tag") self-taught
                    button(class="question__tag") other
            article#experienceQuestion.search-question
                h2(class="question_title") Preferred Years of
                    br
                    | Experience
                div(class="question__tags")
                    button(class="question__tag") Entry-Level
                    button(class="question__tag") +2 years
                    button(class="question__tag") +5 years
                    button(class="question__tag") +10 years
            article#locationPreferenceQuestion.search-question
                h2(class="question_title")| Specify Preferred Location
                    br
                    | of Engineers
                    span.optinal (optional)
                div(class="question__tags")
                    button(class="question__tag") Office-Based
                    button(class="question__tag") Remote Work
                    button(class="question__tag") Hybrid “both”
            select#country(name="country")
                option(value='disabled', selected) Select Country
                option(value="all") All
                option(value="usa") United States
                option(value="canada") Canada
                option(value="uk") United Kingdom
            //
                <script>
                fetch('https://restcountries.com/v3.1/all')
                .then(response => response.json())
                .then(data => {
                const countrySelect = document.getElementById('country');
                data.forEach(country => {
                const option = document.createElement('option');
                option.value = country.alpha3Code;
                option.text = country.name.common;
                countrySelect.add(option);
                });
                })
                .catch(error => console.error('Error fetching countries:', error));
                </script>
            button(class="search_btn btn")
                svg(class="feature__icon")
                    use(href="../assets/icons.svg#icon-search")
                p GO
